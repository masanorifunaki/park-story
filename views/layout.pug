doctype html
html
  head
    title 東京公園ストーリー
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    header
      div.container
        div.header-left
          a(href="/") 東京公園ストーリー
        div.header-right
          if user
            a(href="/logout") #{user.displayName} をログアウト
            a(href=`/mypage/${user.id}`) マイページ
            img(src=`${user.photos[0].value}`, alt="")
          else
            a(href="/login") ログイン
        div.clear
    div
      block content
    script(src="/javascripts/bundle.js")
