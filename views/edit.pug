extends layout

block content
  form(method="post", action=`/course/${courseId}?edit=1`)
    div
      h5 コース名
      input(type="text" name="courseName")
    div
      h5 メモ
      textarea(name="courseMemo")
    div
      label 既存の候補時間
      ul
        each candidate in candidates
          li #{candidate.candidateTime}
      h5 候補日
      input(type="date", name="courseDay")
      p 候補時間の追加 (改行して複数入力してください)
      textarea(name="candidates")
    div
      button(type="submit")  以上の内容で編集する