extends layout

block content
  h1= title
  p Welcome to #{title}
  div
    if user
      p 現在 #{user.displayName} でログイン中
      img(src=`${user.photos[0].value}`, alt="")
      a(href="/logout") #{user.displayName} をログアウト
    else
      a(href="/login") ログイン
  div
    each course in courses
      div
        h3 #{course.course.courseName}
        p #{course.course.courseDescription}
        p #{course.courseTime}
        a(href=`/${course.courseId}`) 詳細を確認する。


